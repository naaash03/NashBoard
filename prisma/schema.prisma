generator client {
  provider = "prisma-client-js"
}

datasource db {
  // With Prisma 7, the URL is configured in prisma.config.ts, not in this schema.
  provider = "postgresql"
}

enum ViewMode {
  BEGINNER
  ADVANCED
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  displayName    String
  modePreference ViewMode         @default(BEGINNER)

  favoriteSports String[]         @default([])
  favoriteTeams  String[]         @default([])

  watchlistItems WatchlistItem[]

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model WatchlistItem {
  id        String   @id @default(cuid())

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  name      String
  team      String
  position  String
  note      String

  createdAt DateTime @default(now())
}